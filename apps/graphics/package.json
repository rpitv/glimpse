{
  "name": "graphics",
  "version": "1.0.0",
  "description": "NodeCG Graphics bundle for RPI TV Glimpse",
  "homepage": "https://rpi.tv/",
  "bugs": {
    "url": "https://github.com/rpitv/glimpse-graphics/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpitv/glimpse-graphics.git"
  },
  "license": "MIT",
  "scripts": {
    "start": "node ../..",
    "start-dev": "npx nodemon ../.. | npx pino-pretty -c",
    "clean": "npx ts-node clean.ts",
    "build": "run-s clean build:*",
    "build:browser": "vite build",
    "build:extension": "tsc -b tsconfig.extension.json",
    "dev": "run-p watch:* start-dev",
    "watch:browser": "vite",
    "watch:extension": "tsc -b tsconfig.extension.json -w"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.3.0",
    "@vueuse/core": "^9.5.0",
    "animejs": "^3.2.1",
    "fast-xml-parser": "^4.3.3",
    "fs-extra": "^11.1.0",
    "gsap": "^3.12.2",
    "module-alias": "^2.2.2",
    "pinia": "^2.0.23",
    "pino": "^8.7.0",
    "serialport": "^10.4.0",
    "uuid": "^8.3.2",
    "vuedraggable": "^4.1.0",
    "vuetify": "^3.7.1"
  },
  "devDependencies": {
    "@mdi/font": "^7.4.47",
    "@types/animejs": "^3.1.7",
    "@types/color": "^3.0.3",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^22.5.4",
    "@types/uuid": "^8.3.4",
    "@types/xml2js": "^0.4.14",
    "@vitejs/plugin-vue": "^2.3.3",
    "globby": "^13.1.2",
    "naive-ui": "^2.32.1",
    "nodecg-cli": "^8.0.1",
    "nodecg-types": "^1.9.0",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1",
    "sass": "^1.54.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.6",
    "vite-plugin-checker": "^0.4.9",
    "vite-plugin-nodecg": "^2.1.0",
    "vite-plugin-vuetify": "^1.0.2",
    "vue": "^3.2.37",
    "vue-tsc": "^0.39.5"
  },
  "nodecg": {
    "compatibleRange": "^2.2.1",
    "dashboardPanels": [
      {
        "name": "game-settings",
        "title": "Game Settings",
        "file": "game-settings.html",
        "workspace": "Settings",
        "width": "8"
      },
      {
        "name": "sync-settings",
        "title": "Sync Settings",
        "file": "sync-settings.html",
        "workspace": "Settings",
        "width": "4"
      },
      {
        "name": "command-palette",
        "title": "Command Palette",
        "file": "command-palette.html",
        "workspace": "Scoreboard",
        "width": "2"
      },
      {
        "name": "teams",
        "title": "Teams",
        "file": "teams.html",
        "workspace": "Scoreboard",
        "width": "6"
      },
      {
        "name": "clock",
        "title": "Clock",
        "file": "clock.html",
        "workspace": "Scoreboard",
        "width": "4"
      },
      {
        "name": "Announcements",
        "title": "Announcements",
        "file": "announcements.html",
        "workspace": "Scoreboard",
        "width": "8"
      },
      {
        "name": "image-selection",
        "title": "Image Selection",
        "file": "image-selection.html",
        "workspace": "Graphics",
        "width": "8"
      },
      {
        "name": "lower-third",
        "title": "Lower Thirds",
        "file": "lower-third.html",
        "workspace": "Graphics",
        "width": "10"
      },
      {
        "name": "statistics",
        "title": "Statistics",
        "file": "statistics.html",
        "workspace": "Statistics",
        "width": "10"
      },
      {
        "name": "fullscreen",
        "title": "Fullscreen",
        "file": "fullscreen.html",
        "workspace": "Graphics",
        "width": "10"
      },
      {
        "name": "players",
        "title": "Players",
        "file": "players.html",
        "workspace": "Graphics",
        "width": "10"
      }
    ],
    "graphics": [
      {
        "file": "glimpse.html",
        "width": 3840,
        "height": 2160
      },
      {
        "file": "worldclock.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "minimal-scoreboard.html",
        "width": 1920,
        "height": 1080
      },
      {
        "file": "preview.html",
        "width": 1920,
        "height": 1080
      }
    ],
    "assetCategories": [
      {
        "name": "images",
        "title": "Images",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      },
      {
        "name": "slideshow-images",
        "title": "Slideshow",
        "allowedTypes": [
          "jpg",
          "jpeg",
          "gif",
          "png"
        ]
      }
    ]
  }
}
